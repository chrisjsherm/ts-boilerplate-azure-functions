{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": [
    // Include .ts, .d.ts and .tsx files.
    "**/*.ts"
  ],
  "exclude": [
    // Filter these files from the include property.
    "./coverage/**",
    "./dist/**",
    "./logs/**",
    "./node_modules/**",
    "**/*.spec.*"
  ]
}
